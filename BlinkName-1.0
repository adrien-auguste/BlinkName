SYSTEM_THREAD(ENABLED);


int led1 = A5; 
int pushButton = A3;
int buttonValue;

void space() {
    // Creating a function to create the space between the characters in a word
            digitalWrite(led1, LOW);
            delay(1000); 
    
}

void dash() {
    // Creating a function to create the dash 
        digitalWrite(led1, HIGH);
        delay(3000);
}

void dot() {
    // Creating the function for a dot
        digitalWrite(led1, HIGH);
        delay(1000);
}

void clear() {
    //This function provides the 3s delay before writing a character
            digitalWrite(led1, LOW);
            delay(3000);
}


void read(int i) {

 
        
        switch(i){
            case 0:{
            //J
                dot();
                space();
                dash();
                space();
                dash();
                space();
                dash();
                break;
            }
            case 1:{
            //E
                dash();
                space();
                dot();
                space();
                dot();
                space();
                dot();
                break;
            
            }
            case 2:{
             //A
                dot();
                space();
                dash();
                break;
            }
            case 3:{
            //N
                dash();
                space();
                dot();
                break;
            }
            case 4:{
            // Restarting
                setup();
                break;
            }
        
        }
        
       
  
}

void setup() {
    
 
 
    pinMode(led1, OUTPUT);
    pinMode(pushButton, INPUT);
  
    //Initialising
    digitalWrite(led1, HIGH);
    delay(500);
    digitalWrite(led1, LOW);
    delay(500);
    digitalWrite(led1, HIGH);
    delay(500);
    digitalWrite(led1, LOW);
    delay(500);
    digitalWrite(led1, HIGH);
    delay(500);
    digitalWrite(led1, LOW);
    delay(500);
    
}

void loop() {
   
   buttonValue = digitalRead(pushButton);
   
   if(buttonValue == HIGH)//Get into if statement if the push button is actioned
    { 
        for(int i =0; i < 4; i++)
        {
          
            clear();// The clear procedure enables the 3 second pause between the letter and also allows the user to press the button
          
                buttonValue = digitalRead(pushButton);
                if(buttonValue == HIGH) {
                    read(4);// The switch will go back to setup.
                    break;
                    }
                else{
                     read(i);// reading the letter
                }
                
        }
    }

    else
    {
        digitalWrite(led1, LOW);
    }
    
    
}
